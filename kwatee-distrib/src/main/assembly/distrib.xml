
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>distro</id>
	<formats>
		<format>tar.gz</format>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
           <useProjectArtifact>false</useProjectArtifact>                                                                                   
            <includes>                                                                                                                       
                <include>net.kwatee.agiledeployment:kwatee:jar</include>                                                                       
            </includes>                                                                                                                      
            <outputDirectory>/</outputDirectory>                                                                                             
		</dependencySet>
		<dependencySet>
           <useProjectArtifact>false</useProjectArtifact>                                                                                   
            <includes>                                                                                                                       
                <include>net.kwatee.agiledeployment:kwatee-api-java:jar</include>                                                                       
            </includes>                                                                                                                      
            <outputDirectory>/addOns/java-api</outputDirectory>                                                                                             
		</dependencySet>
		<dependencySet>
           <useProjectArtifact>false</useProjectArtifact>                                                                                   
            <includes>                                                                                                                       
                <include>net.kwatee.agiledeployment:kwatee-maven-plugin:jar</include>                                                                       
            </includes>                                                                                                                      
            <outputDirectory>/addOns/maven-plugin</outputDirectory>                                                                                             
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>${project.build.directory}/distro</directory>
			<excludes>
				<exclude>**/*.sh</exclude>
			</excludes>
			<outputDirectory />
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/distro</directory>
			<fileMode>0755</fileMode>
			<includes>
				<include>**/*.sh</include>
			</includes>
			<outputDirectory />
		</fileSet>
	</fileSets>
</assembly>